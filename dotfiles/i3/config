# i3 Configuration
#
# Copy this to ~/.config/i3/config and edit it to your liking.
#
# For more information about i3 configuration, see the official documentation:
# https://i3wm.org/docs/userguide.html
font pango:AurulentSans 10

# Set the Mod key (Windows key) as the modifier
set $mod Mod4

# Your preferred terminal emulator
set $term kitty

# Your preferred application launcher
set $menu dmenu_run


set $left h
set $right l
set $up k
set $down j

# Set wallpaper (replace with your wallpaper file path)

# Start picom
# Disable laptop screen
exec_always --no-startup-id ~/.config/personal/os_scripts/launchi3.sh 


# Define workspaces
workspace 1 output HDMI-0
workspace 2 output HDMI-0
workspace 3 output HDMI-0
workspace 4 output DP-1-1
workspace 5 output DP-1-1
workspace 6 output DP-1-1

# Disable borders
#new_window pixel 1
#new_float pixel 1
hide_edge_borders both

# Keybindings
bindsym $mod+e exec --no-startup-id $term
bindsym $mod+c exec --no-startup-id $term -e fish -c "cd ~/.config/; ~/.config/personal/os_scripts/launch_tmux_folder.sh"
bindsym $mod+f exec --no-startup-id kitty -e fish -c  "~/.config/personal/os_scripts/launch_tmux_folder.sh"
bindsym $mod+x exec --no-startup-id $term -e fish -c "~/.config/personal/os_scripts/launch_ranger.sh"
bindsym $mod+Shift+f exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox
bindsym $mod+Shift+s exec --no-startup-id i3lock --clock --image=/path/to/your/lockscreen-image.png
bindsym $mod+Shift+q kill
bindsym $mod+r exec --no-startup-id $menu
bindsym $mod+Shift+o exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://outlook.office.com/mail/inbox
bindsym $mod+Shift+r exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://reddit.com
bindsym $mod+Shift+g exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://github.com
bindsym $mod+Shift+z exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://zoom.us/meeting#/upcoming
bindsym $mod+Shift+y exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://youtube.com
bindsym $mod+Shift+a exec --no-startup-id MOZ_ENABLE_WAYLAND=1 firefox --new-window https://chat.openai.com
bindsym $mod+n exec --no-startup-id ~/.config/personal/os_scripts/start_notes.sh
bindsym $mod+Shift+c reload
bindsym $mod+Shift+m exec --no-startup-id i3-msg exit

# Move focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Switch to workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move windows to workspaces
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Layout
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split
bindsym $mod+Ctrl+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Resizing containers
mode "resize" {
    bindsym $left resize shrink width 10px or 10 ppt
    bindsym $down resize grow height 10px or 10 ppt
    bindsym $up resize shrink height 10px or 10 ppt
    bindsym $right resize grow width 10px or 10 ppt

    # Arrow keys for resizing
    bindsym Left resize shrink width 10px or 10 ppt
    bindsym Down resize grow height 10px or 10 ppt
    bindsym Up resize shrink height 10px or 10 ppt
    bindsym Right resize grow width 10px or 10 ppt

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Ctrl+r mode "resize"

# Gaps
#gaps inner 10

# Status Bar
# You can configure your status bar here.


